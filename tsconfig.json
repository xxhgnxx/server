        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "./app"
    },
    "compileOnSave": true,
    "lib": ["dom", "es6"],
    "include": [
        "src/**/*"
    ]
}
